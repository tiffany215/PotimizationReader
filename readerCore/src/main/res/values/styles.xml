<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="AppTheme.NoActionBar.FullScreen" parent="AppTheme.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <style name="AppTheme.NoActionBar.FullScreen.WBTrans" parent="AppTheme.NoActionBar.FullScreen">
        <item name="android:windowBackground">@color/trans</item>

    </style>


    <style name="AppTheme.NoActionBar.FullScreen.WindowBackground" parent="AppTheme.NoActionBar.FullScreen">
        <item name="android:windowBackground">@drawable/loading_date_bg_01</item>
    </style>


    <!-- 浏览器加载显示的进度条 -->
    <style name="ProgressBar_Mini" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:maxHeight">3dip</item>
        <item name="android:minHeight">3dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:progressDrawable">@drawable/progressbar_mini</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!-- 书架菜单栏 -->
    <style name="bookstore_menu_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">12dp</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:textColor">@color/primary_light</item>
        <item name="android:textSize">12sp</item>
    </style>


    <!-- 阅读设置 布局样式-->
    <style name="app_setting_content">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_margin">5dp</item>
    </style>


    <!-- 自定义loading dialog -->
    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item><!--模糊-->
        <item name="android:windowContentOverlay">@null</item>
    </style>



    <style name="menu_read_setting_btn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawablePadding">-6dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:textColor">@color/color_b2</item>
        <item name="android:textSize">13sp</item>
    </style>

    <!--  -->
    <style name="dialog_no_title" parent="@android:style/Theme.NoTitleBar">
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 隐藏状态栏 -->
        <item name="android:windowFullscreen">true</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">false</item>
    </style>


    <!-- dialog从底部弹出 -->
    <style name="dialog_from_bottom" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/dialog_bottom_anim</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>



    <style name="dialog_bottom_anim" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/dialog_from_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_from_bottom_out</item>
    </style>


    <style name="dialog_fade_away" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/dialog_alpha_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_alpha_exit</item>
    </style>


    <style name="app_setting_content_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left|center</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">15dp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:clickable">true</item>
    </style>


</resources>
