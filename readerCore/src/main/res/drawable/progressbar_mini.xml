<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="0dip" />

            <gradient
                android:angle="270"
                android:centerY="0.5"
                android:endColor="#49f6d9"
                android:startColor="#49f6d9" />
        </shape>
    </item>


    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="0dip" />
                <gradient
                    android:angle="270"
                    android:centerY="0.5"
                    android:endColor="#aaffffff"
                    android:startColor="#aaffffff" />
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="0dip" />
                <gradient
                    android:angle="270"
                    android:centerY="0.5"
                    android:endColor="#aaffffff"
                    android:startColor="#aaffffff" />
            </shape>
        </clip>
    </item>
</layer-list>
